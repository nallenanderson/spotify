@import '../../node_modules/bootstrap/dist/css/bootstrap.css';
// @import '../../node_modules/material-icons/css/material-icons.css';
@import url('https://fonts.googleapis.com/css?family=Raleway:300,600');
@import '_general';

body
  font-family: "Raleway", sans-serif
  font-size 20px
  background $white

h1, h2, h3, h4, h5, h6
  font-weight 600

a
  color $grey
  text-decoration none!important
  transition 0.3s ease-in-out
  &:hover
    color $green

.navbar
  border-radius 0!important

.artist-box
  box-shadow 0 2px 4px rgba(#ccc, 0.3)
  margin 1rem 0
  position relative
  min-height 290px

.artist-results
  margin-top 40px
  transition: 0.4s ease-in-out
  .artist-search
    font-weight 600
    font-style italic

.artist-img
  max-height 200px
  overflow hidden
  &:hover img
    transform scale(1.1)
  img
    transition: 0.5s ease-in-out
    min-height 200px
    width 100%

.artist-info
  padding 1rem 0.5rem
  .popularity
    background $green
    color $white
    font-size 0.7rem
    position absolute
    top 0
    right 0
    padding 0.5rem
    border-radius 0 0 0 8px

.form-control
  border-radius 0
  border none

.navbar-brand
  img
    display inline-block
    margin-right 5px
    height 25px
    position relative
    top -3px

.genre
  background darken($white, 10%)
  border solid 1px rgba($black, 0.2)
  font-size 0.6rem
  padding 0.15rem
  margin 0.2rem
  border-radius 5px
  &:first-of-type
    margin-left 0

.selected-artist
  h2, h3, h4, h5
    color $grey

.back-img
  overflow hidden
  height 400px
  margin-bottom 1.5rem
  img
    width 100%
    position absolute
    top 0
    left 0
    z-index 3

.track
  margin-bottom 1.5rem
  position relative
  box-shadow 0 2px 4px rgba($black, 0.6)
  .ion-monitor
    margin-left 1rem
  .popularity
    position absolute
    top -4px
    padding-left 5px
    right 10px
    color $red
    background $white
    &.green
      color $green
    &.blue
      color $blue
    small
      position relative

.small-head
  text-transform uppercase

.blackover
  background rgba($black, 0.8)
  z-index 4
  height 400px
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  overflow hidden
  h1
    color $white
    padding-top 10%
    text-align center

.related-artist-link
  display block
